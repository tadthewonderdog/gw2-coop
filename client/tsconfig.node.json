{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "composite": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["vite.config.ts"]
}
